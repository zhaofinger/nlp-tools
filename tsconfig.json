{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "build",
    "node_modules"
  ]
}
